n = 5
    A
   A B
  A B C
 A B C D
A B C D E
public class Main
{
	public static void main(String[] args) {
	    int n = 5;
	    
		for( int i = 0 ; i < n ; i++){
		    for( int j = n-i ; j > 0 ; j--){
		        System.out.print(" ");
		    }
		    for( int k = 0 ; k <= i ; k++){
		        System.out.print((char)('A'+k)+" ");
		    }
		    System.out.println();
		}
	}
}
