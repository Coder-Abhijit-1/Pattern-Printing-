n = 5
    *
   ***
  *****
 *******
*********
 *******
  *****
   ***
    *

public class Main{
    public static void main(String[] args){
        int n = 5;
        for( int i = 1 ; i <= 2*n-1 ; i++){
            if( i <=5){
                for( int j = n-i ; j > 0 ; j--){
                    System.out.print(" ");
                }
                
                for(int k = 1 ; k <= 2*i-1 ; k++){
                    System.out.print("*");
                }
            }else {
                int spaces = i - n;
                for (int j = 0; j < spaces; j++) {
                    System.out.print(" ");
                }
                int stars = 2 * (2 * n - i) - 1;
                for (int k = 1; k <= stars; k++) {
                    System.out.print("*");
                }
            }
            
            System.out.println();
        }
    }
}
